# A sample Gemfile
source "http://rubygems.org"

group :forks do
  gem 'outpost', :git => 'git://github.com/coreypurcell/outpost.git'
end

gem 'highline'

gem 'ruby-growl'
gem 'mail'
gem 'tinder'
gem 'net-ping'

group :development, :test do
  gem 'rake'
  gem 'rspec'
  gem 'vcr'
  gem 'fakeweb'
end
